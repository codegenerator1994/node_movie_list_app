<h1>Edit Movie</h1>
<form action="/movies/<%=movie.id%>" method="POST">
  <div class="form-group">
    <label for="movieName">Movie Name:</label>
    <input type="text" id="name" name="name" required value="<%= movie.name %>">
  </div>
  <div class="form-group">
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="0" max="10" step="0.1" value="<%= movie.rating %>">
  </div>
  <div class="form-group">
    <label for="cast">Cast (comma-separated):</label>
    <input type="text" id="cast" name="cast" value="<%= movie.cast %>">
  </div>
  <div class="form-group">
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="<%= movie.genre %>">
  </div>
  <div class="form-group">
    <label for="releaseDate">Release Date:</label>
    <input type="date" id="releaseDate" name="releaseDate" value="<%= movie.releaseDate %>">
  </div>
  <button type="submit">Update Movie</button>
</form>

<a href="/movies">Back to Movie List</a>
